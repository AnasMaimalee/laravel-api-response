{
    "name": "maimalee/laravel-api-response",
    "description": "A Laravel package for consistent and configurable API responses with built-in exception handling.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anas Maimalee",
            "email": "anasment6@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Maimalee\\LaravelApiResponse\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Maimalee\\LaravelApiResponse\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maimalee\\LaravelApiResponse\\ApiResponseServiceProvider"
            ],
            "aliases": {
                "ApiResponse": "Maimalee\\LaravelApiResponse\\Facades\\ApiResponse"
            }
        }
    },
    "scripts": {
        "test": "phpunit --testdox"
    }
}
